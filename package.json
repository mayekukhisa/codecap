{
   "name": "codecap",
   "description": "A file header standardization tool",
   "version": "0.1.0",
   "type": "module",
   "private": true,
   "scripts": {
      "build": "rollup -c",
      "start": "node bin/index.js",
      "lint": "eslint --ext .ts src/ && prettier --check ./**/*.{js,json,md,yml} --ignore-path .gitignore",
      "lint:fix": "eslint --ext .ts src/ --fix && prettier --write ./**/*.{js,json,md,yml} --ignore-path .gitignore"
   },
   "dependencies": {
      "chalk": "^5",
      "commander": "^11",
      "glob": "^10"
   },
   "devDependencies": {
      "@rollup/plugin-replace": "^5",
      "@rollup/plugin-typescript": "^11",
      "@types/glob": "^8",
      "@types/node": "^20",
      "@typescript-eslint/eslint-plugin": "^6",
      "@typescript-eslint/parser": "^6",
      "eslint": "^8",
      "eslint-config-prettier": "^9",
      "eslint-plugin-prettier": "^5",
      "eslint-plugin-simple-import-sort": "^10",
      "prettier": "^3",
      "rollup": "^4",
      "typescript": "^5"
   }
}
