{
   "compilerOptions": {
      "allowJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ESNext"],
      "module": "NodeNext",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "removeComments": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ESNext",
   },
   "include": ["src/**/*.ts"],
}
